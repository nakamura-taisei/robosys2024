#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *inputFile = fopen("input.txt", "r");
    FILE *outputFile = fopen("output.txt", "w");
    char c;

    if (inputFile == NULL) {
        printf("入力ファイルを開けません\n");
        return 1;
    }

    if (outputFile == NULL) {
        printf("出力ファイルを開けません\n");
        fclose(inputFile);
        return 1;
    }

    while ((c = fgetc(inputFile)) != EOF) {
        if (isalpha(c) || c == ' ' || c == '\n') {
            fputc(c, outputFile);
        } else {
            fputc(' ', outputFile); // 文字がアルファベット以外の場合は空白に置換
        }
    }

    fclose(inputFile);
    fclose(outputFile);

    printf("ファイルの変換が完了しました。\n");
    return 0;
}
